<div class="panel panel-default">
  <p class="panel-heading"><b>BOOK CATEGORIES</b></p>
  <div class="panel-body book-category-buttons">
    <p style="text-align: center;">
      <button onclick="showBooks('primary', 'Primary Books'); highLight(this);" class="btn btn-primary btn-large">Primary Books</button>
      <button onclick="showBooks('secondary', 'Secondary Books'); highLight(this);" class="btn btn-primary btn-large">Secondary Books</button>
      <button onclick="showBooks('tertiary', 'Tertiary Books'); highLight(this);" class="btn btn-primary btn-large">Tertiary Books</button>
      <button onclick="showBooks('readers', 'Readers Digest'); highLight(this);" class="btn btn-primary btn-large">Readers Digest </button>
      <button onclick="showBooks('posters','Posters'); highLight(this);" class="btn btn-primary btn-large">Posters </button>
      <button onclick="showBooks('catalogs', 'Catalogs'); highLight(this);" class="btn btn-primary btn-large">Catalogs </button>
    </p>
  </div>
</div>

