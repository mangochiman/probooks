<script type="text/javascript">
  function showBooks(bookCategory, label){
    jQuery(".primary, .secondary, .tertiary, .readers, .posters, .catalogs").hide();
    jQuery('.category').html(label);
    jQuery("." + bookCategory).show();
  }

  function highLight(obj){
    jQuery(".book-category-buttons button").removeClass('btn-default').addClass('btn-primary');
    jQuery(obj).removeClass('btn-primary').addClass('btn-default');
  }

</script>

<style type="text/css">
  .thumb-sm {
    max-height: 111px;
    max-width: 100px;
  }

  .scrollable{
    overflow: auto;
    height: 363px;
  }

  body{
    overflow: hidden;
  }

  .primary, .secondary, .tertiary, .readers, .posters, .catalogs{
    display: none;
