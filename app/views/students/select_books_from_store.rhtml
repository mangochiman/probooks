<script type="text/javascript">
  function showBooks(bookCategory){
    jQuery(".primary, .secondary, .tertiary, .readers").hide();
    jQuery('.category').html(bookCategory.toUpperCase() + " Books");
    jQuery("." + bookCategory).show();
  }
</script>

