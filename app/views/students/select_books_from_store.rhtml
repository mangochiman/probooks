<script type="text/javascript">
  var bookID;

  function selectBookConfirm(bookid){
    bookID = bookid;
    jQuery('#selectBookModal').modal('show');
  }

  function selectBook(){
    body = document.getElementsByTagName("body")[0];

    form = document.createElement("form");
    form.method = "POST"
    form.action = "/students/update_my_book_shelf";
    body.appendChild(form);

    input = document.createElement("input");
    input.type = "hidden";
    input.value = bookID;
    input.name = "book_id";
    form.appendChild(input);
    
    form.submit();
  }

  function viewBook(bookID, bookTitle, bookAuthor){
    document.getElementById('book-title').innerHTML = bookTitle + ' By ' + bookAuthor;
    iframe = document.getElementById("book-iframe");
    src = "http://<%= request.env["HTTP_HOST"] %>/pdfjs/web/viewer.html?file=http://<%= request.env["HTTP_HOST"] %>" + '/books/' + bookID + '.pdf';
    iframe.src = src//'/books/' + bookID + '.pdf'
    jQuery('#viewBook').modal('show');
  }


  var catalogID;

  function selectCatalogConfirm(catalogid){
    catalogID = catalogid;
    jQuery('#selectCatalogModal').modal('show');
  }

  function selectCatalog(){
    body = document.getElementsByTagName("body")[0];

    form = document.createElement("form");
    form.method = "POST"
    form.action = "/students/update_my_catalog_shelf";
    body.appendChild(form);

    input = document.createElement("input");
    input.type = "hidden";
    input.value = catalogID;
    input.name = "catalog_id";
    form.appendChild(input);

    form.submit();
  }

  function viewCatalog(catalogID){
    //
  }


  var posterID;

  function selectPosterConfirm(posterid){
    posterID = posterid;
    jQuery('#selectPosterModal').modal('show');
  }

  function selectPoster(){
    body = document.getElementsByTagName("body")[0];

    form = document.createElement("form");
    form.method = "POST"
    form.action = "/students/update_my_poster_shelf";
    body.appendChild(form);

    input = document.createElement("input");
    input.type = "hidden";
    input.value = posterID;
    input.name = "poster_id";
    form.appendChild(input);

    form.submit();
  }

  function viewPoster(posterID){
    //
  }


  function viewCatalog(catalog_id){
    console.log("here")
    //catalog-zoom
    jQuery('#zoomCatalogModal').modal('show');
    jQuery.ajax({
      type: "POST",
      url: "/students/get_catalog_file",
      data: "catalog_id=" + catalog_id,
      beforeSend: function(){
        jQuery(".catalog-zoom").html("Loading........")
      },
      success: function(filename){
        jQuery(".catalog-zoom").hide();
        iframe = document.getElementById('catalog-iframe');
        src = "http://<%= request.env["HTTP_HOST"] %>/pdfjs/web/viewer.html?file=http://<%= request.env["HTTP_HOST"] %>" + "/catalogs/" + filename;
        iframe.src = src//"/catalogs/" + filename;
        //jQuery(".catalog-zoom").html(img);
      }

    });
  }

  function zoomPoster(poster_id){
    jQuery('#zoomPosterModal').modal('show');
    jQuery.ajax({
      type: "POST",
      url: "/students/get_poster_file",
      data: "poster_id=" + poster_id,
      beforeSend: function(){
        jQuery(".poster-zoom").html("Loading........")
      },
      success: function(result){
        img = '<img src="/posters/' + result+ '"></img>';
        jQuery(".poster-zoom").html(img)
      }

    });
  }
</script>