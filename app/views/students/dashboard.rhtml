<script type="text/javascript">
  var bookID;

  function removeBookConfirm(bookid){
    bookID = bookid;
    jQuery('#deleteBookModal').modal('show');
  }

  function removeBook(){
    body = document.getElementsByTagName("body")[0];

    form = document.createElement("form");
    form.method = "POST"
    form.action = "/students/delete_books_from_my_shelf";
    body.appendChild(form);

    input = document.createElement("input");
    input.type = "hidden";
    input.value = bookID;
    input.name = "book_id";
    form.appendChild(input);

    form.submit();
  }

  function selectBook(){
    window.location = "/select_books_from_store";
  }

  function viewBook(bookID, bookTitle, bookAuthor){
    document.getElementById('book-title').innerHTML = bookTitle + ' By ' + bookAuthor;
    iframe = document.getElementsByTagName('iframe')[0];
    iframe.src = '/books/' + bookID + '.pdf'
    jQuery('#viewBook').modal('show');
  }

  function zoomCatalog(catalog_id){

  }


  var catalogID;

  function removeCatalogConfirm(catalogid){
    catalogID = catalogid;
    jQuery('#deleteCatalogModal').modal('show');
  }

  function removeCatalog(){
    body = document.getElementsByTagName("body")[0];

    form = document.createElement("form");
    form.method = "POST"
    form.action = "/students/delete_catalogs_from_my_shelf";
    body.appendChild(form);

    input = document.createElement("input");
    input.type = "hidden";
    input.value = catalogID;
    input.name = "catalog_id";
    form.appendChild(input);

    form.submit();
  }


  var posterID;

  function removePosterConfirm(posterid){
    posterID = posterid;
    jQuery('#deletePosterModal').modal('show');
  }

  function removePoster(){
    body = document.getElementsByTagName("body")[0];

    form = document.createElement("form");
    form.method = "POST"
    form.action = "/students/delete_posters_from_my_shelf";
    body.appendChild(form);

    input = document.createElement("input");
    input.type = "hidden";
    input.value = posterID;
    input.name = "poster_id";
    form.appendChild(input);

    form.submit();
  }

  function zoomCatalog(catalog_id){
    //catalog-zoom
    jQuery('#zoomCatalogModal').modal('show');
    jQuery.ajax({
      type: "POST",
      url: "/students/get_catalog_image",
      data: "catalog_id=" + catalog_id,
      beforeSend: function(){
        jQuery(".catalog-zoom").html("Loading........")
      },
      success: function(result){
        img = '<img src="/catalogs/' + result+ '"></img>';
        jQuery(".catalog-zoom").html(img)
      }

    });
  }

  function zoomPoster(poster_id){
    //catalog-zoom
    jQuery('#zoomPosterModal').modal('show');
    jQuery.ajax({
      type: "POST",
      url: "/students/get_poster_image",
      data: "poster_id=" + poster_id,
      beforeSend: function(){
        jQuery(".poster-zoom").html("Loading........")
      },
      success: function(result){
        img = '<img src="/posters/' + result+ '"></img>';
        jQuery(".poster-zoom").html(img)
      }

    });
  }

</script>