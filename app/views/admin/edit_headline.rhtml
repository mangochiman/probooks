
<style>
  ul.wysihtml5-toolbar > li {
    position: relative;
  }
</style>

<div class="row">
  <div class="col-lg-12">
    <div class="box">
      <div id="div-1" class="body collapse in">
        <form action="/admin/update_headlines" method="POST">
          <div class="form-group">
            <label>Headline</label>
            <input class="form-control" name="headline" value="<%= @news.title %>"/>
          </div><br />

          <div class="form-group">
            <textarea id="wysihtml5" class="form-control" rows="10" name="data"><%= @news.data %></textarea>
          </div>
          <div class="form-actions">
            <br />
            <input type="hidden" value="<%= @news.news_id %>" name="news_id"></input>
            <input type="submit" value="Submit" class="btn btn-primary" />
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

