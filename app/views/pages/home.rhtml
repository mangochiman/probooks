<div class="row">
  <div class="col-lg-12">
    <ul class="pricing-table" >
      <li class="col-lg-4">
        <h3>PRIMARY</h3>
        <div class="price-body">
          <div class="price">
            <%= @primary_books.count %>
          </div>
        </div>
        <div class="features">
          <ul>
            <% @primary_books.each do |faculty_book| %>
              <li><%= faculty_book.book.title %> By <%= faculty_book.book.author %></li>
            <% end %>
          </ul>
        </div>
        <div class="footer">
          <a href="/browse_by_category/<%= @primary_category_id %>" class="btn btn-info btn-rect">Browse Primary Books</a>
        </div>
      </li>
      <li class="active danger col-lg-4">
        <h3>Secondary</h3>
        <div class="price-body">
          <div class="price">
            <%= @secondary_books.count %>
          </div>
        </div>
        <div class="features">
          <ul>
            <% @secondary_books.each do |faculty_book| %>
              <li><%= faculty_book.book.title %> By <%= faculty_book.book.author %></li>
            <% end %>
          </ul>
        </div>
        <div class="footer">
          <a href="/browse_by_category/<%= @secondary_category_id %>" class="btn btn-metis-1 btn-lg btn-rect">Browse Secondary Books</a>
        </div>
      </li>
      <li class="col-lg-4">
        <h3>Tertiary</h3>
        <div class="price-body">
          <div class="price">
            <%= @tertiary_books.count %>
          </div>
        </div>
        <div class="features">
          <ul>
            <% @tertiary_books.each do |faculty_book| %>
              <li><%= faculty_book.book.title %> By <%= faculty_book.book.author %></li>
            <% end %>
          </ul>
        </div>
        <div class="footer">
          <a href="/browse_by_category/<%= @tertiary_category_id %>" class="btn btn-info btn-rect">Browse Tertiary Books</a>
        </div>
      </li>

    </ul>
    <div class="clearfix"></div>
  </div>
</div>